{
    "$id": "https://schema.beyondallreason.dev/tachyon/definitions/privateUser.json",
    "title": "PrivateUser",
    "allOf": [
        { "$ref": "../definitions/user.json" },
        {
            "type": "object",
            "properties": {
                "friendIds": { "type": "array", "items": { "type": "string" } },
                "outgoingFriendRequestIds": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "incomingFriendRequestIds": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "ignoreIds": { "type": "array", "items": { "type": "string" } },
                "currentBattle": {
                    "$id": "privateBattle",
                    "title": "BattleStartRequestData",
                    "description": "Secret battle information to pass to spring.",
                    "type": "object",
                    "properties": {
                        "username": { "type": "string" },
                        "password": { "type": "string" },
                        "ip": { "type": "string" },
                        "port": { "type": "number" }
                    },
                    "required": ["username", "password", "ip", "port"]
                }
            },
            "required": [
                "friendIds",
                "outgoingFriendRequestIds",
                "incomingFriendRequestIds",
                "ignoreIds"
            ]
        }
    ]
}
